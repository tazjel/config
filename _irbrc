require 'irb/completion'

# --- wirble
require 'rubygems'
require 'wirble'
Wirble.init
Wirble.colorize

# refe
module Kernel
  def r(arg)
    puts `refe #{arg}`
  end
  private :r
end

class Module
  def r(meth = nil)
    if meth
      if instance_methods(false).include? meth.to_s
        puts `refe #{self}##{meth}`
      else
        super
      end
    else
      puts `refe #{self}`
    end
  end
end

# :q as exit
class Symbol; alias orig_inspect inspect; def inspect; self == :q ? exit : orig_inspect; end

